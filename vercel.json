{
  "version": 2,
  "buildCommand": "npm --prefix frontend install && npm --prefix frontend run build",
  "outputDirectory": "frontend/dist",
  "functions": {
    "backend/app.py": {
      "runtime": "python3.12"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/backend/app.py/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
