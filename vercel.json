{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "ecopulsse.vercel.app"
        }
      ],
      "status": 308,
      "headers": {
        "Location": "https://ecopulse.vercel.app/$1"
      }
    },
    {
      "src": "^/api(?:/(.*))?$",
      "dest": "/backend/app.py/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
